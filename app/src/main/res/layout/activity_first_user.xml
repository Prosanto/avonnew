<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/avon_app_logo">

    </ImageView>

    <ImageView
        android:id="@+id/li_login_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="60dp"
        android:background="@drawable/shadow_pink_background"></ImageView>

    <RelativeLayout
        android:id="@+id/re_login_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_login_selector"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/edt_fp_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:fontFamily="@font/avenir_nextlt_pro_it"
                android:hint="@string/fp_password"
                android:imeOptions="actionNext"
                android:paddingLeft="25dp"
                android:textSize="18sp">

            </EditText>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mar_name"
            android:layout_margin="10dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/edt_fp_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:fontFamily="@font/avenir_nextlt_pro_it"
                android:hint="@string/fp_confirmpassword"
                android:imeOptions="actionDone"
                android:paddingLeft="25dp"
                android:textSize="18sp">

            </EditText>
        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

    <io.writeopia.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/fp_btnconfirm_anmiation"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/re_login_edt"
        android:layout_width="match_parent"
        app:spinning_bar_width="4dp"
        android:text="@string/fp_btn"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_login" />

    <LinearLayout
        android:id="@+id/li_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fp_btnconfirm_anmiation"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/SKIP"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:background="@drawable/ic_right_arrow">

        </ImageView>

    </LinearLayout>


</RelativeLayout>