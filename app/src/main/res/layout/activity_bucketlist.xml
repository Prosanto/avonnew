<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_have_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_bucket_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/PANIER"
            android:textColor="@color/header_text_color"
            android:textSize="18sp">

        </TextView>

        <View
            android:id="@+id/separator_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_bucket_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/text_gray">

        </View>

        <RelativeLayout
            android:id="@+id/re_bucket_bottom"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/txt_stoe_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:text="@string/Selectioner"
                    android:textColor="@color/white"
                    android:textSize="18sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_stoe_selection"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:text="@string/unmagasin"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_yellow"
                    android:textSize="18sp">

                </TextView>

                <ImageView
                    android:id="@+id/img_storeselect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_ok_pink">

                </ImageView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/separator_view"
            android:layout_marginBottom="80dp"
            android:background="@drawable/rounded_corner_bucketlist"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bucket_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/re_bottom_total"
                android:layout_margin="20dp">

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/re_bottom_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:text="@string/PRIXTotal"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/avenir_nextlt_pro_bold"
                    android:text="Rs 1700.00"
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </TextView>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_no_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/Votrepanier"
            android:textColor="@color/color_gray_border"
            android:textSize="22sp">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_cart">

        </ImageView>

    </LinearLayout>


</RelativeLayout>