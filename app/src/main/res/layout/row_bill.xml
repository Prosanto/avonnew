<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/due_action"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:checkable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/order_number2"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/txt_ordernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/order_no"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/txt_orderdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layouttxt_orderdate_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/order_time"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/txt_orderdate_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/total_amount"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/txt_totalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_for_order"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_receipt">

            </ImageView>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
