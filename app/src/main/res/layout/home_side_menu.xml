<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_appname"
                    android:layout_width="125dp"
                    android:layout_height="28dp"
                    android:src="@drawable/avon_app_logo"
                    android:textSize="24sp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:text="Chamarel Cosmetics Ltd"
                    android:textColor="@color/black"
                    android:textSize="12sp"></TextView>

            </LinearLayout>


            <ImageView
                android:id="@+id/img_closeslide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_remove"
                android:clickable="true">

            </ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/li_incentive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/ic_000"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_incentive"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ic_000"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/incentive"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>

        <RelativeLayout
            android:id="@+id/li_catalog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/ic_ooo1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_brocher"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ic_ooo1"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/sidebar_3"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>

        <RelativeLayout
            android:id="@+id/li_blog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/ic_00022"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_blogs"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ic_00022"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/sidebar_1"
                android:textColor="@color/black"
                android:textSize="18sp"></TextView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>


        <RelativeLayout
            android:id="@+id/li_historic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/ic_0055"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_order_history"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ic_0055"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/sidebar_6"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>


        <RelativeLayout
            android:id="@+id/li_politique"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/icon_00000"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_privacy"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_00000"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/sidebar_8"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>

        <RelativeLayout
            android:id="@+id/li_terms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/ic_000008"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_terms"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ic_000008"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/sidebar_9"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/header_text_color">

            </ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_gray_border">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/folowus_text"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageFacebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_facebook"
                    android:clickable="true">

                </ImageView>

                <ImageView
                    android:id="@+id/imageInstragram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_instagram"
                    android:clickable="true">

                </ImageView>

                <ImageView
                    android:id="@+id/imageYouteb"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_youtube"
                    android:clickable="true">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/company_name_1"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/company_name_2"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>