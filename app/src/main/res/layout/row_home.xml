<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/due_action"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/layoutview"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/text_gray"
            android:textSize="14sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/re_addshop"
            android:layout_below="@+id/txt_productname"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re_addshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f0f2f8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_product_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp">

                </TextView>
                <TextView
                    android:id="@+id/txt_product_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:textColor="@color/text_pink"
                    android:textSize="12sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:text=""
                    android:textColor="@color/text_green"
                    android:textSize="12sp">

                </TextView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_single_shopping"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_blue">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_shopping_white"
                    android:scaleType="centerCrop"
                    app:tint="@color/white" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
