<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/due_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/img_messageicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_launcher">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/layout_right"
                android:layout_toRightOf="@+id/img_messageicon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_msgdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_msgcros"
                    android:fontFamily="@font/avenir_nextlt_pro_bold"
                    android:textColor="@color/header_text_color"
                    android:textSize="15dp">

                </TextView>


                <TextView
                    android:id="@+id/txt_msgdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_toLeftOf="@+id/img_msgcros"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:maxLines="2"
                    android:textColor="#707070"
                    android:textSize="14dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_msgcros"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_times_solid"></ImageView>


                <ImageView
                    android:id="@+id/unread_message"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                </ImageView>


            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
