<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/cross"
        android:layout_width="40dp"
        android:layout_height="40dp">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/solid_previous_year"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="120dp">

                <RelativeLayout
                    android:background="@drawable/solid_this_campaign"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/profilr_normal"
                        android:layout_width="90dp"
                        android:layout_height="90dp">
                    </ImageView>

                    <ImageView
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        app:tint="@color/white"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp">
                    </ImageView>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/my_profile"
                android:textColor="@color/text_pink"
                android:textSize="15sp">

            </TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/Nom"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/MonidentitÃ©"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/text_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/Email"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/Phone"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/edit_phone_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                app:tint="@color/purple_200"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_edit"
                android:visibility="visible">

            </ImageView>

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/Adressefacturation"
            android:textColor="@color/text_gray"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_addressedit"
                android:drawableRight="@drawable/ic_edit"
                android:drawablePadding="4dp"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:textColor="@color/text_gray"
                android:textSize="15sp"></TextView>

            <ImageView
                android:id="@+id/img_addressedit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_edit"
                android:visibility="gone">

            </ImageView>
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/text_gray"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/mode_iconview"
                    android:id="@+id/mode_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                </ImageView>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/mode_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text="@string/mode"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text="@string/mode_dark"
                        android:textColor="@color/text_pink">

                    </TextView>

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/change_mode"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.SwitchCompat>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/lan_icon"
                    android:id="@+id/lanu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                </ImageView>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/lanu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text="@string/lanuage"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text="@string/lan_english"
                        android:textColor="@color/text_pink">

                    </TextView>

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/change_language"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.SwitchCompat>

            </RelativeLayout>





        </LinearLayout>


        <View
            android:layout_marginTop="20dp"
            android:background="@color/text_gray"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/password_hint"
            android:textColor="@color/text_pink">
        </TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:id="@+id/re_changepassword"
                android:background="@drawable/gradient_bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_bold"
                    android:text="@string/change_password2"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/re_forgorpassword"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_bold"
                    android:text="@string/forgot_password"
                    android:textColor="@color/text_gray">

                </TextView>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/re_logout"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/log_out_icon"
                android:layout_height="30dp">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/logout"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>