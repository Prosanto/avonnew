<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/reset_ltop_left">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avon_app_logo">

        </ImageView>

        <TextView
            android:id="@+id/header_text"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="@string/reset_password"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/title_text"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_nextlt_pro_regular"
            android:text="@string/reset_password_to"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/code_of_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text=""
            android:textColor="@color/teal_200"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/qty_of_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_nextlt_pro_bold"
            android:text="20"
            android:visibility="gone"
            android:textColor="@color/purple_500"
            android:textSize="18sp">
        </TextView>

        <LinearLayout
            android:id="@+id/layut_for_prodct_limi"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="LUCK"
                android:textColor="@color/teal_200"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/product_linit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text=" -  Lmit 2"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_complete_reset"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_ok"
            android:clickable="true"></ImageView>


        <com.avon.android.app.tickview.TickView
            android:id="@+id/tick_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:check_base_color="@color/purple_500"
            app:rate="normal" />


    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/reset_ltop_right">

    </ImageView>

</RelativeLayout>