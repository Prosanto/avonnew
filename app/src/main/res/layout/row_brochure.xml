<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/due_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:checkable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_toLeftOf="@+id/image_for_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_nextlt_pro_bold"
                        android:text="@string/brochure"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/txt_ordernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/avenir_nextlt_pro_regular"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"></TextView>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/image_for_order"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic__02365821582692228">

            </ImageView>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
