<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/re_pickup_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/half_circle"
            android:rotation="180">

        </ImageView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/li_back_order_pick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView

                    android:id="@+id/img_menu_home"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_left_arrow">

                </ImageView>

            </LinearLayout>


            <ImageView
                android:id="@+id/img_appname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/avon_app_logo"
                android:textSize="24sp">

            </ImageView>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_pickup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_pickup_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/avenir_nextlt_pro_bold"
        android:text="@string/pickup_head"
        android:textAllCaps="true"
        android:textColor="@color/header_text_color"
        android:textSize="20dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/re_bucket_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/layout_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/txt_stoe_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/Confirmer"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_stoe_selection"
                android:fontFamily="@font/avenir_nextlt_pro_regular"
                android:text="@string/votrecommande"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_yellow"
                android:textSize="18sp">

            </TextView>

            <ImageView
                android:id="@+id/img_orderpickup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_ok_pink">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_pickup_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded_corner_bucketlist"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_pickup_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/pickup_1"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="18sp"></TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_pickup_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ok_gray"></androidx.appcompat.widget.AppCompatImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/text_gray">

        </View>

        <RelativeLayout
            android:id="@+id/layout_pickup_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/pickup_2"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_gray"
                android:textSize="18sp"></TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_pickup_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_ok_gray"></androidx.appcompat.widget.AppCompatImageView>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/text_gray">

        </View>
        <RelativeLayout
            android:id="@+id/layout_pickup_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/pickup_3"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="18sp"></TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_pickup_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_ok_gray"></androidx.appcompat.widget.AppCompatImageView>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/text_gray">

        </View>
        <RelativeLayout
            android:id="@+id/layout_pickup_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_nextlt_pro_bold"
                android:text="@string/pickup_4"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="18sp"></TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_pickup_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_ok_gray"></androidx.appcompat.widget.AppCompatImageView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/text_gray">

        </View>


    </LinearLayout>


</RelativeLayout>