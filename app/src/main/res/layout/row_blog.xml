<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/due_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:checkable="true"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_blogtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_nextlt_pro_bold"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="24dp">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_layout">

                    <ImageView
                        android:id="@+id/blog_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:adjustViewBounds="true">

                    </ImageView>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_blogdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_nextlt_pro_regular"
                    android:maxLines="3"
                    android:textColor="#707070"
                    android:textSize="14dp">

                </TextView>

               <RelativeLayout
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/txt_open_file"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/avenir_nextlt_pro_bold"
                       android:text="@string/open_file"
                       android:textColor="@color/header_text_color"
                       android:textSize="20dp">

                   </TextView>
                   <TextView
                       android:id="@+id/txt_readmore"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:fontFamily="@font/avenir_nextlt_pro_bold"
                       android:text="@string/read_more"
                       android:textColor="@color/header_text_color"
                       android:textSize="20dp">

                   </TextView>
               </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
