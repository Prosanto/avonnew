<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/oder_different"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray_line"
        android:visibility="gone"></View>


    <TextView
        android:id="@+id/txt_order_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/avenir_nextlt_pro_regular"
        android:text="1"
        android:textColor="@color/text_pink"
        android:textSize="15dp">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/avenir_nextlt_pro_regular"
            android:text="1"
            android:textColor="@color/text_gray"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/txt_prodectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/txt_order_price"
            android:layout_toRightOf="@+id/txt_order_id"
            android:fontFamily="@font/avenir_nextlt_pro_regular"
            android:textColor="@color/text_gray"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/txt_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/avenir_nextlt_pro_regular"
            android:textColor="@color/text_gray"
            android:textSize="15dp">

        </TextView>

    </RelativeLayout>


</LinearLayout>